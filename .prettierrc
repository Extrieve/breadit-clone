{
  "semi": true,
  "trailingComma": "none",
  "singleQuote": true,
  "printWidth": 80,
  "tabWidth": 2,
  "useTabs": false,
  "jsxSingleQuote": false,
  "jsxBracketSameLine": false,
  "arrowParens": "avoid",
  "endOfLine": "lf",
  "trimTrailingWhitespace": true,
  "proseWrap": "preserve",
  "importOrder": [
    "^@core/(.*)$",
    "^@server/(.*)$",
    "^@client/(.*)$",
    "^@ui/(.*)$",
    "^[./]",
    "^@/(.*)$",
    "^[a-z]",
    "^@\\w"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
}
